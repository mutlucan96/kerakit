{
  "name": "kerakit",
  "version": "0.1.0",
  "description": "A front-end library for Kera Apps",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./message": {
      "import": "./dist/message.mjs",
      "require": "./dist/message.cjs"
    },
    "./runtime": {
      "import": "./dist/runtime.mjs",
      "require": "./dist/runtime.cjs"
    },
    "./components": {
      "import": "./dist/components.mjs",
      "require": "./dist/components.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "vite",
    "build": "vite build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "kera", "web-components"],
  "author": "Mutlu Can Yilmaz",
  "email": "mtlcnylmz@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/kerahq/kerakit/issues"
  },
  "homepage": "https://gitlab.com/kerahq/kerakit#readme",
  "devDependencies": {
    "@eslint/css": "^0.6.0",
    "@eslint/js": "^9.24.0",
    "@eslint/json": "^0.11.0",
    "@eslint/markdown": "^6.3.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/addon-mdx-gfm": "^8.6.12",
    "@storybook/web-components": "^8.6.12",
    "@storybook/web-components-vite": "^8.6.12",
    "eslint": "^9.24.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "globals": "^16.0.0",
    "lit": "^3.3.0",
    "prettier": "3.5.3",
    "storybook": "^8.6.12",
    "vite": "^6.3.3",
    "vite-plugin-eslint": "^1.8.1"
  },
  "peerDependencies": {
    "lit": "^3.3.0"
  }
}
